---
import Layout from '../../components/Layout.astro';
import Container from '../../components/atoms/Container.astro';
import H1 from '../../components/atoms/H1.astro';
import Breadcrumbs from '../../components/organisms/Breadcrumbs.astro';
import MajalesImage from '../../images/projekty/majales.png';

const metaTags = {
  title: 'Projekty | Studentská unie UTB',
  description: 'TODO',
  image: '/meta-image-projekty.jpg',
};

const majales = {
  image: MajalesImage.src,
  title: 'Majáles UTB',
  description:
    'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et doloremagna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.',
};

const items = Array.from(Array(10).keys()).map((_) => majales);
---

<Layout {...metaTags}>
  <section class="pt-8 sm:pt-10 lg:pt-12 pb-16 bg-gradient-to-b from-white via-stone-100 to-stone-100">
    <Container>
      <Breadcrumbs
        items={[
          {
            title: 'Projekty',
            href: '/projekty',
          },
        ]}
      />
      <H1>Projekty</H1>
      <p
        class="sm:text-lg lg:text-xl pt-6 text-stone-700 tracking-wide leading-relaxed sm:leading-relaxed lg:leading-relaxed max-w-3xl"
      >
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore
        magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
        consequat.
      </p>
      <div
        class="grid grid-cols-1 -mx-2 sm:mx-auto lg:grid-cols-2 gap-x-6 gap-y-4 sm:gap-y-6 lg:gap-y-8 mt-12 max-w-xl lg:max-w-none relative"
      >
        {
          items.map((item) => (
            <div class="bg-white rounded-xl overflow-hidden transition duration-500 shadow-sm relative group hover:shadow-xl hover:shadow-black/30">
              <img
                src={item.image}
                class="w-full object-cover aspect-[2/1] relative group-hover:scale-105 transition duration-500 rounded-xl"
                alt=""
              />
              <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition duration-500 " />
              <div class="absolute inset-0 text-white/0 flex items-center justify-center group-hover:text-white/100 z-10 transition duration-500 pointer-events-none">
                <span class="text-lg uppercase tracking-widest font-bold">Klikněte pro více informací</span>
              </div>
              <a
                href="/projekty/majales"
                class="absolute inset-0 bg-gradient-to-b from-black/0 via-black/50 sm:via-black/30 sm:to-black/100 to-black/100 flex flex-col justify-end p-3 sm:p-4 md:p-5"
              >
                <h2 class="text-stone-50 text-xl sm:text-2xl font-semibold group-hover:text-white transition duration-300 tracking-wide">
                  {item.title}
                </h2>
                <p class="text-stone-300 group-hover:text-stone-200 transition duration-300 line-clamp-2 text-xs sm:text-sm leading-normal sm:leading-normal max-w-md">
                  Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et
                  dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut
