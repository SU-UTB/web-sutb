<div class="flex flex-col w-fit mx-auto text-center justify-center items-center">
  <img
    class="w-36 h-36 md:h-40 xl:h-44 md:w-40 xl:w-44 rounded-full object-cover shadow-lg mb-4"
    src={Astro.props.image}
    alt=""
  />
  <div class="px-1 mb-2">
    <h3 class="text-lg md:text-xl lg:text-2xl font-extrabold uppercase tracking-wider text-gray-800">
      {Astro.props.name}
    </h3>
    <p class="text-primary-600 text-xs md:text-sm xl:text-base uppercase font-semibold tracking-wider">
      {Astro.props.role}
    </p>
  </div>
  <ul role="list" class="w-full space-y-1">
    <li>
      <a
        href={`mailto:${Astro.props.email}`}
        class="flex items-center justify-center text-sm md:text-base py-1 space-x-2 font-semibold text-gray-700 transition duration-300 hover:text-orange-600"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="-ml-1 h-5 w-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
          ></path>
        </svg>

        <span>{Astro.props.email}</span>
      </a>
    </li>
    {
      Astro.props.tel && (
        <li>
          <a
            href={`tel:${Astro.props.tel}`}
            class="flex items-center justify-center py-1 space-x-2 font-semibold text-gray-700 transition duration-300 hover:text-orange-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="-ml-1 h-5 w-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
              />
            </svg>

            <span>{Astro.props.tel}</span>
          </a>
        </li>
      )
    }
  </ul>
</div>
